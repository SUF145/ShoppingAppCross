<?xml version="1.0" encoding="UTF-8" ?>
<views:MvxContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Test.UI.Pages.MenuPage"
    xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
    xmlns:viewModels="clr-namespace:Test.Core.ViewModels;assembly=Test.Core"
    x:TypeArguments="viewModels:MenuViewModel"
    x:DataType="viewModels:MenuViewModel"
    Padding="50,70">

    <ContentPage.Content>

        <CollectionView ItemsSource="{Binding MenuList}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:Item">

                    <StackLayout>

                        <Label Text="{Binding Name}" TextColor="Black" HorizontalOptions="Start" FontAttributes="Bold">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MenuViewModel}}, Path=ShopCommand}" CommandParameter="{Binding .}"/>
                            </Label.GestureRecognizers>
                        </Label>

                    </StackLayout>
                </DataTemplate>

            </CollectionView.ItemTemplate>

        </CollectionView>
    </ContentPage.Content>
</views:MvxContentPage>